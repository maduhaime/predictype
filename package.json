{
  "name": "predictype",
  "version": "0.3.1",
  "description": "PredicType is a library of pre-built and tested predicates for TypeScript, covering various data types and operations.",
  "homepage": "https://maduhaime.github.io/predictype/",
  "keywords": [
    "predicate",
    "typescript",
    "type-safe",
    "validation",
    "comparison",
    "membership",
    "range",
    "state"
  ],
  "license": "MIT",
  "author": "Marc-Antoine Duhaime",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maduhaime/predictype.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "pack": "npm run build && npm pack",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "docs": "rimraf docs && typedoc",
    "docs:deploy": "npm run docs && gh-pages -d docs -f",
    "publish": "npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "gh-pages": "^6.3.0",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
