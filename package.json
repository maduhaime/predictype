{
  "name": "predictype",
  "version": "0.2.6",
  "description": "Predictype is a library of pre-built and tested predicates for TypeScript, covering various data types and operations.",
  "keywords": [
    "typescript",
    "predicate"
  ],
  "license": "MIT",
  "author": "Marc-Antoine Duhaime",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maduhaime/predictype.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./predicates": {
      "import": "./dist/predicates/index.js",
      "types": "./dist/predicates/index.d.ts"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "pack": "npm run build && npm pack",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "docs": "typedoc --entryPointStrategy expand",
    "publish": "npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
