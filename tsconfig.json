{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    // Coding standards
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // JSON module support
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
